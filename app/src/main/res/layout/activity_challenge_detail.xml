<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".activity.ChallengeDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/challenge_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/originBlack">
        <ImageView
            android:id="@+id/challenge_detail_back"
            android:layout_width="11dp"
            android:layout_height="26dp"
            android:clickable="true"
            android:src="@drawable/ic_challenge_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.04"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="[ NAME ]"
            android:textSize="15dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"/>

        <ImageView
            android:id="@+id/challenge_detail_tip"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_challenge_tip"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.96"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/challenge_detail_image"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        android:background="@drawable/challenge_detail_test"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@+id/challenge_detail_toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/challenge_detail_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        app:layout_constraintTop_toBottomOf="@+id/challenge_detail_image"
        app:layout_constraintLeft_toLeftOf="parent">
        <TextView
            android:id="@+id/challenge_detail_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="10dp"
            android:text="활력있는 하루를 위한 첫 번째 활동이에요 아자아자"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/challenge_detail_state"
            app:layout_constraintHorizontal_weight="0.8"/>
        <LinearLayout
            android:id="@+id/challenge_detail_progress"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@id/challenge_detail_comment"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/challenge_detail_state"
            app:layout_constraintHorizontal_weight="0.83"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/challenge_detail_progress1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="9dp"
                android:background= "#424242"/>
            <ImageView
                android:id="@+id/challenge_detail_progress2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:background= "#424242"/>
            <ImageView
                android:id="@+id/challenge_detail_progress3"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:background= "#424242"/>
            <ImageView
                android:id="@+id/challenge_detail_progress4"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:background= "#424242"/>
            <ImageView
                android:id="@+id/challenge_detail_progress5"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:background= "#424242"/>
            <ImageView
                android:id="@+id/challenge_detail_progress6"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:background= "#424242"/>
            <ImageView
                android:id="@+id/challenge_detail_progress7"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:background= "#424242"/>


        </LinearLayout>

        <TextView
            android:id="@+id/challenge_detail_state"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            android:text="챌린지 시작전"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"
            android:background="#FFDF8E"
            app:layout_constraintHorizontal_weight="0.3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/challenge_detail_comment"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenge_detail_recyler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintTop_toBottomOf="@id/challenge_detail_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>