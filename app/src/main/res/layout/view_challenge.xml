<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="192dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cover_image"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:scaleType="centerCrop"
        android:background="@color/grey"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/challenge_information"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/middleBlack"
        app:layout_constraintTop_toBottomOf="@id/cover_image">

        <TextView
            android:id="@+id/challenge_title"
            android:layout_width="130dp"
            android:layout_height="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_vertical|left"
            android:text="테스트 제목1"
            android:maxLines="1"
            android:textColor="@color/deepGrey"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/first"
            android:layout_width="18dp"
            android:layout_height="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lightBlack"
            app:cardCornerRadius="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/challenge_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/second"
            android:layout_width="18dp"
            android:layout_height="2dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lightBlack"
            app:cardCornerRadius="1dp"
            app:layout_constraintStart_toEndOf="@id/first"
            app:layout_constraintTop_toBottomOf="@id/challenge_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/third"
            android:layout_width="18dp"
            android:layout_height="2dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lightBlack"
            app:cardCornerRadius="1dp"
            app:layout_constraintStart_toEndOf="@id/second"
            app:layout_constraintTop_toBottomOf="@id/challenge_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fourth"
            android:layout_width="18dp"
            android:layout_height="2dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lightBlack"
            app:cardCornerRadius="1dp"
            app:layout_constraintStart_toEndOf="@id/third"
            app:layout_constraintTop_toBottomOf="@id/challenge_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fifth"
            android:layout_width="18dp"
            android:layout_height="2dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lightBlack"
            app:cardCornerRadius="1dp"
            app:layout_constraintStart_toEndOf="@id/fourth"
            app:layout_constraintTop_toBottomOf="@id/challenge_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/sixth"
            android:layout_width="18dp"
            android:layout_height="2dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lightBlack"
            app:cardCornerRadius="1dp"
            app:layout_constraintStart_toEndOf="@id/fifth"
            app:layout_constraintTop_toBottomOf="@id/challenge_title" />

        <androidx.cardview.widget.CardView
            android:id="@+id/seventh"
            android:layout_width="18dp"
            android:layout_height="2dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/lightBlack"
            app:cardCornerRadius="1dp"
            app:layout_constraintStart_toEndOf="@id/sixth"
            app:layout_constraintTop_toBottomOf="@id/challenge_title" />

        <ImageView
            android:id="@+id/footstep"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_footstep"
            app:layout_constraintEnd_toStartOf="@id/flag"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/flag"
            android:layout_width="14dp"
            android:layout_height="32dp"
            android:layout_marginRight="7dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_flag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/totalCount"
            android:layout_width="14dp"
            android:layout_height="32dp"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingBottom="11dp"
            android:layout_marginRight="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>