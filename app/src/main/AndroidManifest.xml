<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.calmme">
    <!-- 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:usesCleartextTraffic="true"
        android:name=".CalmMe"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="kr.co.calmme.activity.HeartrateActivity" />
        <activity android:name="kr.co.calmme.activity.HeartScanActivity" />
        <activity android:name="kr.co.calmme.activity.LoginActivity" />
        <activity android:name="kr.co.calmme.activity.MainActivity" />
        <activity android:name="kr.co.calmme.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.UserLogin.LocalLoginActivity"></activity>
        <activity android:name=".activity.UserLogin.LoginActivity" />
        <activity android:name="kr.co.calmme.activity.SelectCameraActivity" />
        <activity
            android:name=".activity.ChallengeDetailActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        </activity>

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />

        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="oauth"
                    android:scheme="kakaob0ce1e85d647723f96ffec2be4ef7367" />
            </intent-filter>
        </activity>
    </application>

</manifest>